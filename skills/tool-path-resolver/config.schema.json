{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version"
    },
    "searchPaths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Additional paths to search for executables"
    },
    "fallbackPaths": {
      "type": "array", 
      "items": {
        "type": "string"
      },
      "description": "Fallback paths to try if standard locations fail"
    },
    "cacheEnabled": {
      "type": "boolean",
      "description": "Enable path caching for better performance"
    },
    "cacheTtlMinutes": {
      "type": "integer",
      "description": "Cache TTL in minutes"
    }
  },
  "required": ["version", "searchPaths", "fallbackPaths", "cacheEnabled", "cacheTtlMinutes"]
}