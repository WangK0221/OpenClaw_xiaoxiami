{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "clawhub": {
      "type": "object",
      "properties": {
        "defaultRegistry": {
          "type": "string",
          "description": "Default ClawHub registry URL"
        },
        "timeoutMs": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 30000,
          "description": "Timeout for ClawHub operations in milliseconds"
        }
      },
      "required": ["defaultRegistry", "timeoutMs"]
    },
    "installation": {
      "type": "object",
      "properties": {
        "skillsDir": {
          "type": "string",
          "description": "Directory where skills are installed"
        },
        "backupBeforeInstall": {
          "type": "boolean",
          "description": "Whether to backup existing skills before installation"
        }
      },
      "required": ["skillsDir", "backupBeforeInstall"]
    }
  },
  "required": ["clawhub", "installation"]
}