{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "allowedSources": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of allowed skill sources (e.g., 'clawhub', 'github', 'local')"
    },
    "blockedPatterns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Regex patterns to block (e.g., '.html$', '.tar.gz$')"
    },
    "validationLevel": {
      "type": "string",
      "enum": ["strict", "moderate", "lenient"],
      "description": "Level of validation strictness"
    },
    "autoCorrect": {
      "type": "boolean",
      "description": "Whether to auto-correct common mistakes"
    }
  },
  "required": ["allowedSources", "blockedPatterns", "validationLevel", "autoCorrect"]
}